import java.util.Scanner;
public class main {

	public static void main(String[] args) {
		// declarations
		Scanner sc = new Scanner(System.in);
		int conv, erreur; //conv sera le sens de la conversion, erreur servira à sortir de la boucle
		float tempe, tempFin; //tempe sera la température à convertir, tempFin la température convertie
		char choix; // On s'en fout pour le moment
		// TODO Auto-generated method stub
do {
System.out.println("Choississez le mode de conversion :");
System.out.println("1 - Conversion Celcius -> Fahrenheit");
System.out.println("2 - Conversion Fahrenheit -> Celcius");
	conv = sc.nextInt();	// on récupère le choix du sens de la convesion
System.out.println("Quelle est la température à convertir ?");
	tempe = sc.nextFloat(); // on récupère la température à convertir
	switch (conv)
{
	case 1:
	{tempFin = ((9 / 5) * tempe) + 32; //formule pour passer de Celcius à Fahrenheit
	erreur = 0;} // ce qui permettra de sortir de la boucle
	break;
	case 2:
	{tempFin = ((tempe - 32) * 5) / 2; // formule pour passer de Farenheit à Celcius
	erreur = 0;} // ce qui permettra de sortir de la boucle
	break;
	default:
	{System.out.println("Choix incorrect"); // si le choix n'est pas 1 ou 2, il dit que c'est pas bon
	erreur = 1;} // la valeur de erreur est 1 donc on reste dans la boucle
}
}while (erreur == 1); //fin de la boucle
if (conv == 1)
	System.out.println(tempe + "° Celcius = " + tempFin + "° Fahrenheit");
	else // sur l'erreur à la ligne 34, il dit que tempFin n'est pas initialisée, pourtant à 22 et 26...
		System.out.println(tempe + "° Farenheit = " + tempFin + "° Celcius");
		// pareil ici il dit que tempFin n'est pas initialisée...
// Normalement tant que conv n'est pas 1 ou 2, il ne sortira pas de la boucle
// pour moi tempFin est initialisée dans la boucle si conv = 1 ou 2
		
	}
}
